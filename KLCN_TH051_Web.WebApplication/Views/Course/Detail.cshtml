<script>
    // Giả lập dữ liệu thật từ database
    let lessonContents = {
        reading: "<h2>Giới thiệu</h2><p>Đây là nội dung bài đọc đã lưu…</p>",
        video: "/videos/sample.mp4",
        quiz: {
            description: "Quiz kiểm tra căn bản",
            questions: [
                { q: "JS là viết tắt của gì?", answers: ["JavaScript", "JSON"], correct: 0 },
                { q: "React là gì?", answers: ["Library", "Framework"], correct: 0 }
            ]
        }
    };
    document.querySelectorAll(".btn-preview").forEach(btn => {
        btn.addEventListener("click", () => {
            const type = btn.getAttribute("data-type");
            let body = document.getElementById("previewBody");
            if (type === "reading") {
                body.innerHTML = lessonContents.reading;
            }
            else if (type === "video") {
                body.innerHTML = `
                    <video controls style="width:100%;background:#000;">
                        <source src="${lessonContents.video}">
                    </video>
                `;
            }
            else if (type === "quiz") {
                let quiz = lessonContents.quiz;
                let html = `<h5>${quiz.description}</h5><hr/>`;
                quiz.questions.forEach((q, i) => {
                    html += `
                        <div class="mb-3">
                            <strong>Câu ${i + 1}: ${q.q}</strong>
                            <ul class="mt-1">
                                ${q.answers.map((a, idx) =>
                                    `<li ${idx === q.correct ? 'class="text-success fw-bold"' : ""}>${a}</li>`
                                ).join("")}
                            </ul>
                        </div>
                    `;
                });
                body.innerHTML = html;
            }
            new bootstrap.Modal("#previewModal").show();
        });
    });
</script>