<!-- Chart.js Library -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    // Data for the chart (fake data for now)
    const ctx = document.getElementById('revenueChart').getContext('2d');
    new Chart(ctx, {
        type: 'line',
        data: {
            labels: ['Mar 2023', 'Apr 2023', 'May 2023', 'Jun 2023', 'Jul 2023', 'Aug 2023', 'Sep 2023', 'Oct 2023', 'Nov 2023', 'Dec 2023', 'Jan 2024', 'Feb 2024'],
            datasets: [{
                label: 'Doanh thu (VND)',
                data: [500000, 600000, 550000, 580000, 520000, 530000, 500000, 510000, 500000, 480000, 3500000, 450000], // Fake data
                borderColor: '#f06292',
                backgroundColor: 'rgba(240, 98, 146, 0.2)',
                fill: true,
                tension: 0.4
            }]
        },
        options: {
            responsive: true,
            scales: {
                y: {
                    beginAtZero: false,
                    ticks: {
                        callback: function(value) {
                            return value.toLocaleString('en-US'); // Format numbers as VND
                        }
                    }
                }
            }
        }
    });
</script>
