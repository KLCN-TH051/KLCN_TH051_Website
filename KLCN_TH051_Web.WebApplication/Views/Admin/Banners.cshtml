@{
    ViewData["Title"] = "Banners";
}

<div class="row">
    <!-- SIDEBAR -->
    <partial name="_Sidebar" />

    <!-- MAIN CONTENT -->
    <div class="col-9">
        <div class="card shadow-sm p-4">

            <!-- HEADER -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <a href="#" class="btn btn-primary">
                    <i class="bi bi-plus-lg"></i> Thêm
                </a>
            </div>

            <!-- SORTABLE LIST -->
            <div id="bannerList" class="list-group">

                <!-- ITEM 1 -->
                <div class="list-group-item d-flex align-items-center">
                    <span class="handle me-3" style="cursor:grab;">⋮⋮</span>

                    <img src="https://placehold.co/150x60?text=Banner+1" class="me-3 rounded" alt="Banner 1">

                    <div class="ms-auto">
                        <button class="btn btn-outline-secondary btn-sm me-2">
                            <i class="bi bi-pencil"></i>
                        </button>
                        <button class="btn btn-outline-danger btn-sm">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>
                </div>

                <!-- ITEM 2 -->
                <div class="list-group-item d-flex align-items-center">
                    <span class="handle me-3" style="cursor:grab;">⋮⋮</span>

                    <img src="https://placehold.co/150x60?text=Banner+2" class="me-3 rounded" alt="Banner 2">

                    <div class="ms-auto">
                        <button class="btn btn-outline-secondary btn-sm me-2">
                            <i class="bi bi-pencil"></i>
                        </button>
                        <button class="btn btn-outline-danger btn-sm">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>
                </div>

                <!-- ITEM 3 -->
                <div class="list-group-item d-flex align-items-center">
                    <span class="handle me-3" style="cursor:grab;">⋮⋮</span>

                    <img src="https://placehold.co/150x60?text=Banner+3" class="me-3 rounded" alt="Banner 3">

                    <div class="ms-auto">
                        <button class="btn btn-outline-secondary btn-sm me-2">
                            <i class="bi bi-pencil"></i>
                        </button>
                        <button class="btn btn-outline-danger btn-sm">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<!-- SORTABLEJS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/Sortable/1.15.0/Sortable.min.js"></script>

<script>
    new Sortable(document.getElementById("bannerList"), {
        animation: 150,
        handle: ".handle",
        ghostClass: "bg-light"
    });
</script>
