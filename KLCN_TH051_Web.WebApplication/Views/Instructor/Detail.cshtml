@{
    ViewData["Title"] = "Chi tiết khóa học";
    var fakeTitle = "Khoá học lập trình ASP.NET Core";
    var fakeCategory = "Lập trình web";
    var fakeDescription = "Khoá học từ cơ bản đến nâng cao về ASP.NET Core 8.";
    var fakePrice = 300000;
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">

<style>
    .handle {
        cursor: grab;
    }

    .sortable-ghost {
        opacity: .5;
    }
</style>

<div class="row">
    <partial name="_Sidebar" />

    <div class="col-9">

        <!-- ================== THÔNG TIN KHOÁ HỌC ================== -->
        <h4 class="mb-4">Cập nhật khóa học</h4>
        <form>
            <div class="row">
                <div class="col-md-8 mb-3">
                    <label class="form-label">Tên khóa học</label>
                    <input type="text" class="form-control" value="@fakeTitle">
                </div>
                <div class="col-md-4 mb-3">
                    <label class="form-label">Danh mục</label>
                    <select class="form-select">
                        <option selected>@fakeCategory</option>
                        <option>Lập trình Java</option>
                        <option>Lập trình .NET</option>
                    </select>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Upload file</label>
                <input type="file" class="form-control">
            </div>

            <div class="mb-3">
                <label class="form-label">Mô tả</label>
                <textarea class="form-control" rows="4">@fakeDescription</textarea>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label class="form-label">Giá</label>
                    <input type="number" class="form-control" value="@fakePrice">
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <input type="checkbox" class="form-check-input me-1" id="freeCheck">
                    <label class="form-check-label" for="freeCheck">Miễn phí</label>
                </div>
            </div>

            <button class="btn btn-primary mb-4">Lưu</button>
        </form>

        <hr />

        <!-- ================== NỘI DUNG KHOÁ HỌC ================== -->
        <div>
            <div class="d-flex justify-content-between mb-3">
                <h5>Nội dung khóa học</h5>
                <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#addLessonModal">+ Thêm</button>
            </div>

            <div id="lessonList">

                <!-- BÀI ĐỌC -->
                <div class="lesson-item p-3 mb-2 d-flex justify-content-between align-items-center"
                     style="background-color:#e9f4ff;border-radius:6px;">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-list me-3 handle"></i>
                        <i class="bi bi-journal-text me-2"></i>
                        <strong>Giới thiệu (Bài đọc)</strong>
                    </div>
                    <div class="d-flex">
                        <button class="btn btn-outline-primary btn-sm me-2">Sửa</button>
                        <button class="btn btn-link text-dark me-1 btn-edit-content" data-type="reading"><i class="bi bi-pencil-square"></i></button>
                        <button class="btn btn-link text-danger"><i class="bi bi-trash"></i></button>
                    </div>
                </div>

                <!-- VIDEO -->
                <div class="lesson-item p-3 mb-2 d-flex justify-content-between align-items-center"
                     style="background-color:#e9f4ff;border-radius:6px;">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-list me-3 handle"></i>
                        <i class="bi bi-play-circle me-2"></i>
                        <strong>Ôn lại kiến thức căn bản (Video)</strong>
                    </div>
                    <div class="d-flex">
                        <button class="btn btn-outline-primary btn-sm me-2">Sửa</button>
                        <button class="btn btn-link text-dark me-1 btn-edit-content" data-type="video"><i class="bi bi-pencil-square"></i></button>
                        <button class="btn btn-link text-danger"><i class="bi bi-trash"></i></button>
                    </div>
                </div>

                <!-- QUIZ -->
                <div class="lesson-item p-3 mb-2 d-flex justify-content-between align-items-center"
                     style="background-color:#e9f4ff;border-radius:6px;">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-list me-3 handle"></i>
                        <i class="bi bi-question-circle me-2"></i>
                        <strong>Bài tập số 1 (Câu hỏi)</strong>
                    </div>
                    <div class="d-flex">
                        <button class="btn btn-outline-primary btn-sm me-2">Sửa</button>
                        <button class="btn btn-link text-dark me-1 btn-edit-content" data-type="quiz"><i class="bi bi-pencil-square"></i></button>
                        <button class="btn btn-link text-danger"><i class="bi bi-trash"></i></button>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>


<!-- ========================== MODAL THÊM BÀI ========================== -->
<div class="modal fade" id="addLessonModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content p-3">
            <div class="modal-header border-0">
                <h5 class="modal-title">Thêm bài học</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <label class="form-label">Tên bài học</label>
                <input type="text" class="form-control mb-3">

                <label class="form-label">Loại</label>
                <select class="form-select">
                    <option>Video</option>
                    <option>Bài đọc</option>
                    <option>Câu hỏi ôn tập</option>
                </select>

                <div class="form-check mt-3">
                    <input type="checkbox" class="form-check-input" id="previewCheck">
                    <label class="form-check-label" for="previewCheck">Cho phép xem trước</label>
                </div>
            </div>

            <div class="modal-footer border-0">
                <button class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                <button class="btn btn-primary">OK</button>
            </div>
        </div>
    </div>
</div>

<!-- ========================== MODAL BÀI ĐỌC ========================== -->
<div class="modal fade" id="editReadingModal" tabindex="-1">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Bài đọc</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <div id="readingEditor" style="height:420px;"></div>
            </div>

            <div class="modal-footer">
                <button class="btn btn-light" data-bs-dismiss="modal">Đóng</button>
                <button class="btn btn-primary">Lưu</button>
            </div>
        </div>
    </div>
</div>

<!-- ========================== MODAL VIDEO ========================== -->
<div class="modal fade" id="editVideoModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Video</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <video id="videoPreview" controls style="width:100%;background:#000;">
                    <source src="" type="video/mp4" />
                </video>

                <div class="mt-3">
                    <label class="form-label">Upload video mới</label>
                    <input type="file" id="videoUploadInput" class="form-control" accept="video/*">
                </div>
            </div>

            <div class="modal-footer">
                <button class="btn btn-light" data-bs-dismiss="modal">Đóng</button>
                <button class="btn btn-primary">Lưu</button>
            </div>
        </div>
    </div>
</div>

<!-- ========================== MODAL QUIZ STEP 1 ========================== -->
<div class="modal fade" id="quizDescriptionModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content p-3">

            <h5 class="modal-title mb-3">Quiz</h5>

            <label class="form-label">Mô tả</label>
            <input type="text" id="quizDescriptionInput" class="form-control mb-3" placeholder="Bài ôn tập số 1">

            <div class="mt-3 d-flex">
                <button class="btn btn-primary" id="btnCreateQuiz">TẠO MỚI</button>
                <div class="flex-grow-1"></div>
                <button class="btn btn-light" data-bs-dismiss="modal">Đóng</button>
            </div>

        </div>
    </div>
</div>


<!-- ========================== MODAL QUIZ STEP 2 ========================== -->
<div class="modal fade" id="editQuizModal" tabindex="-1">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Quiz</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">

                <label class="form-label">Mô tả</label>
                <input type="text" id="quizDescription" class="form-control mb-3">

                <div class="d-flex mb-3">
                    <button class="btn btn-primary me-2">UPDATE</button>
                    <div class="flex-grow-1"></div>
                    <button class="btn btn-primary me-2" id="addQuizQuestionBtn">THÊM CÂU HỎI +</button>
                    <button class="btn btn-outline-primary">
                        <i class="bi bi-cloud-upload"></i> IMPORT CÂU HỎI TỪ EXCEL
                    </button>
                </div>

                <div class="d-flex bg-primary text-white p-2 fw-bold">
                    <div class="flex-grow-1">Câu hỏi</div>
                    <div class="flex-grow-1">Đa lựa chọn</div>
                    <div style="width:120px;">Tuỳ chọn</div>
                </div>

                <div id="quizQuestionList"></div>

            </div>

            <div class="modal-footer">
                <button class="btn btn-light" data-bs-dismiss="modal">Đóng</button>
                <button class="btn btn-primary" id="saveQuizBtn">Lưu</button>
            </div>

        </div>
    </div>
</div>



<!-- ========================== JS ========================== -->

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>
<script src="https://cdn.quilljs.com/1.3.6/quill.min.js"></script>

<script>
    /* ======== QUILL EDITOR (BÀI ĐỌC) ======== */
    const minimalToolbar = [
        [{ header: [false, 1, 2, 3] }],
        ["bold", "italic", "underline"],
        ["blockquote"],
        [{ list: "ordered" }, { list: "bullet" }],
        [{ align: [] }],
        ["link", "image"],
        ["code-block"]
    ];

    var readingEditor = new Quill("#readingEditor", {
        theme: "snow",
        modules: {
            toolbar: minimalToolbar
        }
    });


    /* ======== MỞ MODAL THEO LOẠI ======== */
    document.querySelectorAll(".btn-edit-content").forEach(btn => {
        btn.addEventListener("click", () => {
            const type = btn.getAttribute("data-type");

            if (type === "reading")
                new bootstrap.Modal("#editReadingModal").show();
            else if (type === "video")
                new bootstrap.Modal("#editVideoModal").show();
            else if (type === "quiz")
                new bootstrap.Modal("#editQuizModal").show();
        });
    });


    /* ======== QUIZ STEP 1 → STEP 2 ======== */
    document.getElementById("btnCreateQuiz").addEventListener("click", () => {
        let desc = document.getElementById("quizDescriptionInput").value.trim();
        if (!desc) return alert("Vui lòng nhập mô tả!");

        document.getElementById("quizDescription").value = desc;

        bootstrap.Modal.getInstance(document.getElementById("quizDescriptionModal")).hide();
        new bootstrap.Modal(document.getElementById("editQuizModal")).show();
    });


    /* ======== QUIZ: ADD QUESTION ======== */
    document.getElementById("addQuizQuestionBtn").addEventListener("click", () => {
        const html = `
            <div class="border p-2 mt-2 quiz-block">
                <div class="d-flex mb-2">
                    <div class="flex-grow-1">
                        <input class="form-control quiz-question-input" placeholder="Nhập câu hỏi"/>
                    </div>

                    <div class="d-flex align-items-center ms-3">
                        <label class="me-1">Đa lựa chọn</label>
                        <input type="checkbox" class="form-check-input quiz-multi-check">
                    </div>

                    <button class="btn btn-link text-danger ms-3 btn-del-question">
                        <i class="bi bi-trash"></i>
                    </button>
                </div>

                <div class="quiz-answer-list"></div>

                <button class="btn btn-outline-primary btn-sm btn-add-answer mt-2">+ Thêm đáp án</button>
            </div>
        `;

        document.getElementById("quizQuestionList").insertAdjacentHTML("beforeend", html);
    });


    /* ======== QUIZ: ADD/REMOVE ANSWER ======== */
    document.addEventListener("click", e => {
        if (e.target.closest(".btn-add-answer")) {
            const wrap = e.target.closest(".quiz-block").querySelector(".quiz-answer-list");
            wrap.insertAdjacentHTML("beforeend", `
                <div class="d-flex align-items-center mb-2 answer-row">
                    <input class="form-control me-2 quiz-answer-input" placeholder="Nhập đáp án"/>
                    <label class="me-1">Đúng</label>
                    <input type="checkbox" class="form-check-input quiz-correct-check">
                    <button class="btn btn-link text-danger ms-2 btn-del-answer">
                        <i class="bi bi-trash"></i>
                    </button>
                </div>
            `);
        }

        if (e.target.closest(".btn-del-question"))
            e.target.closest(".quiz-block").remove();

        if (e.target.closest(".btn-del-answer"))
            e.target.closest(".answer-row").remove();
    });



    /* ======== SAVE QUIZ ======== */
    document.getElementById("saveQuizBtn").addEventListener("click", () => {

        let quiz = [];

        document.querySelectorAll(".quiz-block").forEach(block => {
            const question = block.querySelector(".quiz-question-input").value;
            const multiple = block.querySelector(".quiz-multi-check").checked;

            let answers = [];

            block.querySelectorAll(".answer-row").forEach(a => {
                answers.push({
                    text: a.querySelector(".quiz-answer-input").value,
                    correct: a.querySelector(".quiz-correct-check").checked
                });
            });

            quiz.push({ question, multiple, answers });
        });

        console.log("QUIZ SAVED:", quiz);
        alert("Quiz đã lưu!");
    });


    /* ======== SORTABLE ======== */
    new Sortable(document.getElementById("lessonList"), {
        animation: 150,
        handle: ".handle",
        ghostClass: "sortable-ghost"
    });

</script>
