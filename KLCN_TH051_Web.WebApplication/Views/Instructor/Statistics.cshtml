@{
    ViewData["Title"] = "Thống kê";
}

<div class="row">

    <!-- SIDEBAR -->
    <partial name="_Sidebar" />


    <!-- MAIN CONTENT -->
    <div class="col-9">

        <!-- TOP STATS -->
        <div class="row mb-4">

            <!-- Khóa học -->
            <div class="col-md-4 mb-3">
                <div class="card shadow-sm text-center">
                    <div class="card-body">
                        <img src="https://placehold.co/80x80?text=Course" class="img-fluid mb-2" />
                        <h3 class="fw-bold">6</h3>
                        <p class="text-muted">Khóa học online</p>
                    </div>
                </div>
            </div>

            <!-- Người học -->
            <div class="col-md-4 mb-3">
                <div class="card shadow-sm text-center">
                    <div class="card-body">
                        <img src="https://placehold.co/80x80?text=Users" class="img-fluid mb-2" />
                        <h3 class="fw-bold">6</h3>
                        <p class="text-muted">Người học</p>
                    </div>
                </div>
            </div>

            <!-- Doanh thu -->
            <div class="col-md-4 mb-3">
                <div class="card shadow-sm text-center">
                    <div class="card-body">
                        <img src="https://placehold.co/80x80?text=VND" class="img-fluid mb-2" />
                        <h3 class="fw-bold">550000</h3>
                        <p class="text-muted">Doanh thu tháng (VND)</p>
                    </div>
                </div>
            </div>
        </div>


        <!-- CHART -->
        <div class="card shadow-sm">
            <div class="card-body">

                <h4 class="text-center fw-bold mb-4">Danh thu 12 tháng</h4>

                <div class="text-center mb-3">
                    <span class="badge bg-light text-dark border">
                        <span class="text-danger fw-bold">■</span> Doanh thu (VND)
                    </span>
                </div>

                <canvas id="revenueChart" height="120"></canvas>

            </div>
        </div>

    </div>

</div>


<!-- Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    const ctx = document.getElementById('revenueChart');

    new Chart(ctx, {
        type: 'line',
        data: {
            labels: [
                'Mar 2023', 'Apr 2023', 'May 2023', 'Jun 2023',
                'Jul 2023', 'Aug 2023', 'Sep 2023', 'Oct 2023',
                'Nov 2023', 'Dec 2023', 'Jan 2024', 'Feb 2024'
            ],
            datasets: [{
                label: 'Doanh thu (VND)',
                data: [
                    0, 350000, 250000, 200000,
                    300000, 220000, 300000, 0,
                    300000, 0, 700000, 500000
                ],
                borderColor: '#ff6b81',
                backgroundColor: 'rgba(255, 107, 129, 0.2)',
                borderWidth: 2,
                tension: 0.3,
                pointRadius: 4,
                pointBackgroundColor: '#ff6b81'
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: {
                        callback: value => value.toLocaleString()
                    }
                }
            }
        }
    });
</script>
