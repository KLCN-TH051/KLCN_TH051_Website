@* Lấy dữ liệu từ ViewData *@
<div class="col-md-3 col-lg-2 mb-3">
    <div class="card">
        <div class="card-body">
            <h6 class="fw-bold mb-3">INSTRUCTOR DASHBOARD</h6>

            <div class="list-group">
                <a href="/Instructor/Statistics" class="list-group-item list-group-item-action
                    @(ViewData["ActiveMenu"]?.ToString() == "stats" ? "active" : "")">
                    Thống kê
                </a>

                <a href="/Instructor/Courses" class="list-group-item list-group-item-action
                    @(ViewData["ActiveMenu"]?.ToString() == "courses" ? "active" : "")">
                    Khoá học giảng dạy
                </a>

                <a href="/Instructor/Orders" class="list-group-item list-group-item-action
                    @(ViewData["ActiveMenu"]?.ToString() == "orders" ? "active" : "")">
                    Đơn hàng
                </a>
            </div>
        </div>
    </div>
</div>
