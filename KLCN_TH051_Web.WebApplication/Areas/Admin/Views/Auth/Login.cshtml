@{
    ViewData["Title"] = "Đăng nhập";
    Layout = null;
    var apiBaseUrl = ViewData["ApiUrl"]?.ToString() ?? "https://localhost:7134";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<div class="container mt-5" style="max-width: 400px;">
    <h2 class="mb-4 text-center">Đăng nhập</h2>
    <form id="loginForm">
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" required>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Mật khẩu</label>
            <input type="password" class="form-control" id="password" required>
        </div>
        <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
    </form>
    <div id="loginError" class="text-danger mt-3" style="display:none;"></div>
</div>

<script src="~/js/adminlogin.js"
        data-api-url="@Html.Raw(apiBaseUrl.TrimEnd('/'))/api/Account/login"
        asp-append-version="true"></script>
