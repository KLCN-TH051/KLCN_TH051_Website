<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - EduAdmin</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome 6 -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-light">

    <div class="d-flex flex-nowrap min-vh-100">

        <!-- Sidebar -->
        <div class="d-flex flex-column flex-shrink-0 p-3 bg-white border-end" <a href="d:\do_an_mohinh3lop\klcn_th051_website\klcn_th051_web.webapplication\areas\admin\views\shared\_adminlayout.cshtml">d:\do_an_mohinh3lop\klcn_th051_website\klcn_th051_web.webapplication\areas\admin\views\shared\_adminlayout.cshtml</a>style="width: 250px;">
            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index"
               class="d-flex align-items-center mb-3 text-decoration-none">
                <img src="https://placehold.co/40x40?text=EA" alt="Logo" class="me-2 rounded">
                <span class="fs-5 fw-semibold text-primary">EduAdmin</span>
            </a>
            <hr>
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a class="nav-link @(ViewData["Active"] as string == "Dashboard" ? "active" : "link-dark")"
                       asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                        <i class="fa fa-home me-2"></i> Tổng quan
                    </a>
                </li>
                <li>
                    <a class="nav-link @(ViewData["Active"] as string == "LearningResult" ? "active" : "link-dark")"
                       asp-area="Admin" asp-controller="LearningResult" asp-action="Index">
                        <i class="fa fa-chart-line me-2"></i> Kết quả học tập
                    </a>
                </li>
                <li>
                    <a class="nav-link @(ViewData["Active"] as string == "Course" ? "active" : "link-dark")"
                       asp-area="Admin" asp-controller="Course" asp-action="Index">
                        <i class="fa fa-book me-2"></i> Quản lý khóa học
                    </a>
                </li>
                <li>
                    <a class="nav-link @(ViewData["Active"] as string == "Document" ? "active" : "link-dark")"
                       asp-area="Admin" asp-controller="Document" asp-action="Index">
                        <i class="fa fa-folder me-2"></i> Tài liệu
                    </a>
                </li>
                <li>
                    <a class="nav-link @(ViewData["Active"] as string == "Account" ? "active" : "link-dark")"
                       asp-area="Admin" asp-controller="Account" asp-action="Index">
                        <i class="fa fa-users me-2"></i> Tài khoản
                    </a>
                </li>
                <li>
                    <a class="nav-link @(ViewData["Active"] as string == "Payment" ? "active" : "link-dark")"
                       asp-area="Admin" asp-controller="Payment" asp-action="Index">
                        <i class="fa fa-credit-card me-2"></i> Thanh toán
                    </a>
                </li>
                <li>
                    <a class="nav-link @(ViewData["Active"] as string == "Settings" ? "active" : "link-dark")"
                       asp-area="Admin" asp-controller="Settings" asp-action="Index">
                        <i class="fa fa-cog me-2"></i> Cài đặt
                    </a>
                </li>
            </ul>
            <hr>
            <div class="dropdown">
                <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle"
                   id="dropdownUser" data-bs-toggle="dropdown" aria-expanded="false">
                    <img src="https://placehold.co/32x32?text=A" alt="User" width="32" height="32" class="rounded-circle me-2">
                    <strong>Admin</strong>
                </a>
                <ul class="dropdown-menu dropdown-menu-end text-small shadow" aria-labelledby="dropdownUser">
                    <li><a class="dropdown-item" href="#">Cài đặt</a></li>
                    <li><a class="dropdown-item" href="#">Trang cá nhân</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="#">Đăng xuất</a></li>
                </ul>
            </div>
        </div>

        <!-- Main content -->
        <div class="flex-grow-1 d-flex flex-column">

            <!-- Topbar -->
            <nav class="navbar navbar-light bg-white border-bottom px-3">
                <div class="container-fluid">
                    <form class="d-flex" role="search">
                        <input class="form-control me-2" type="search" placeholder="Tìm kiếm..." aria-label="Search">
                        <button class="btn btn-outline-secondary" type="submit"><i class="fa fa-search"></i></button>
                    </form>
                    <div class="d-flex align-items-center gap-3">
                        <a href="#" class="text-dark"><i class="fa fa-bell"></i></a>
                        <img src="https://placehold.co/32x32?text=U" alt="User" class="rounded-circle">
                        <span class="fw-semibold">Admin User</span>
                    </div>
                </div>
            </nav>

            <!-- Body -->
            <main class="flex-grow-1 p-4 bg-light">
                @RenderBody()
            </main>

        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
