@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - EduAdmin</title>
    <link rel="icon" href="~/favicon.ico" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
</head>
<body class="bg-light">

    <!-- JS QUẢN LÝ TRẠNG THÁI ĐĂNG NHẬP -->
    <script>
        function logout() {
            localStorage.removeItem('authToken');
            localStorage.removeItem('userName');
            localStorage.removeItem('userEmail');
            location.reload();
        }

        document.addEventListener('DOMContentLoaded', () => {
            const token = localStorage.getItem('authToken');
            const userName = localStorage.getItem('userName');
            const toggle = document.getElementById('dropdownUserToggle');
            const menu = document.getElementById('userDropdownMenu');

            // Chỉ xóa menu, KHÔNG ĐƯỢC XÓA toggle.innerHTML (giữ data-bs-toggle)
            menu.innerHTML = '';

            const content = document.createElement('div');
            content.className = 'd-flex align-items-center';

            if (token && userName) {
                const firstLetter = userName.charAt(0).toUpperCase();
                content.innerHTML = `
                    <img src="https://placehold.co/40x40?text=${firstLetter}" alt="Avatar" width="38" height="38" class="rounded-circle me-2 border">
                    <span class="fw-semibold text-dark">${userName}</span>
                `;
                menu.innerHTML = `
                    <li><a class="dropdown-item" href="#"><i class="fa fa-user me-2"></i> Trang cá nhân</a></li>
                    <li><a class="dropdown-item" href="#"><i class="fa fa-key me-2"></i> Đổi mật khẩu</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item text-danger" href="javascript:void(0)" onclick="logout()"><i class="fa fa-sign-out-alt me-2"></i> Đăng xuất</a></li>
                `;
            } else {
                content.innerHTML = `
                    <i class="fa fa-user-circle fa-lg me-2"></i>
                    <span class="fw-semibold text-dark">Tài khoản</span>
                `;
                menu.innerHTML = `
                    <li><a class="dropdown-item" href="/Admin/Auth/Login"><i class="fa fa-sign-in-alt me-2"></i> Đăng nhập</a></li>
                `;
            }

            toggle.innerHTML = '';
            toggle.appendChild(content);
        });
    </script>

    <div class="d-flex flex-nowrap min-vh-100">
        <!-- Sidebar -->
        <div class="d-flex flex-column flex-shrink-0 p-3 bg-white border-end" style="width: 280px;">
            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index"
               class="d-flex align-items-center mb-3 text-decoration-none">
                <img src="https://placehold.co/40x40?text=EA" alt="Logo" class="me-2 rounded">
                <span class="fs-5 fw-semibold text-primary">EduAdmin</span>
            </a>
            <hr>
            <ul class="nav nav-pills flex-column mb-auto">
                <li><a href="/admin/home/index" class="nav-link @(currentController == "Home" ? "active" : "")"><i class="fa fa-home me-2"></i> Trang chủ</a></li>
                <li><a href="/admin/account/index" class="nav-link @(currentController == "Account" ? "active" : "")"><i class="fa fa-at me-2"></i> Quản lý tài khoản</a></li>
                <li><a href="/admin/subject/index" class="nav-link @(currentController == "Subject" ? "active" : "")"><i class="fa fa-book me-2"></i> Quản lý môn học</a></li>
                <li><a href="/admin/course/index" class="nav-link @(currentController == "Course" ? "active" : "")"><i class="fa fa-book-reader me-2"></i> Quản lý khóa học</a></li>
                <li><a href="/admin/user/index" class="nav-link @(currentController == "User" ? "active" : "")"><i class="fa fa-users me-2"></i> Quản lý người dùng</a></li>
            </ul>
            <hr>
        </div>

        <!-- Main Content -->
        <div class="flex-grow-1 d-flex flex-column">
            <nav class="navbar navbar-light bg-white border-bottom px-4 shadow-sm">
                <div class="container-fluid justify-content-between">
                    <form class="d-flex w-50" role="search">
                        <input class="form-control me-2" type="search" placeholder="Tìm kiếm..." aria-label="Search">
                        <button class="btn btn-outline-secondary" type="submit"><i class="fa fa-search"></i></button>
                    </form>

                    <!-- Dropdown Tài khoản / User -->
                    <div class="dropdown">
                        <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle"
                           id="dropdownUserToggle" data-bs-toggle="dropdown" aria-expanded="false">
                            <!-- Nội dung sẽ được JS thay thế -->
                            <i class="fa fa-user-circle fa-lg me-2"></i>
                            <span class="fw-semibold text-dark">Tài khoản</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end shadow" id="userDropdownMenu">
                            <!-- Nội dung sẽ được JS thay thế -->
                            <li><a class="dropdown-item" href="/Admin/Auth/Login"><i class="fa fa-sign-in-alt me-2"></i> Đăng nhập</a></li>
                        </ul>
                    </div>
                </div>
            </nav>

            <main class="flex-grow-1 p-4 bg-light">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>