@{
    ViewData["Title"] = "Quản lý tài khoản";
    // var apiUrl = ViewData["ApiUrl"]?.ToString();
}

<!-- Load FontAwesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<!-- ===================== NAV TABS ===================== -->
<ul class="nav nav-tabs mb-3" id="accountTab" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#tabAccounts" type="button">
            Tài khoản
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" data-bs-toggle="tab" data-bs-target="#tabRoles" type="button">
            Vai trò
        </button>
    </li>
</ul>

<div class="tab-content">

    <!-- ===================== TAB TÀI KHOẢN ===================== -->
    <div class="tab-pane fade show active" id="tabAccounts">
        @await Html.PartialAsync("~/Areas/Admin/Views/Account/User.cshtml")
    </div>

    <!-- ===================== TAB VAI TRÒ ===================== -->
    <div class="tab-pane fade" id="tabRoles">
        @await Html.PartialAsync("~/Areas/Admin/Views/Account/Role.cshtml")
    </div>

</div>

@section Scripts {
    <script type="module" src="@Url.Content("~/js/modules/admin/user/user.list.js")"></script>
    <script type="module" src="@Url.Content("~/js/modules/admin/user/user.add.js")"></script>
    <script type="module" src="@Url.Content("~/js/modules/admin/user/user.edit.js")"></script>
    <script type="module" src="@Url.Content("~/js/modules/admin/user/user.del.js")"></script>
    <script type="module" src="@Url.Content("~/js/modules/admin/user/roleApi.js")"></script>
    <script type="module" src="@Url.Content("~/js/modules/admin/user/user.roles.js")"></script>

    <script type="module" src="@Url.Content("~/js/modules/admin/role/role.list.js")"></script>
    <script type="module" src="@Url.Content("~/js/modules/admin/role/role.edit.js")"></script>
}