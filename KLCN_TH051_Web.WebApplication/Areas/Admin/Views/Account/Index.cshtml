@{
    ViewData["Title"] = "Quản lý tài khoản";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="mb-0">@ViewData["Title"]</h4>
    <a href="/admin/account/create" class="btn btn-primary">
        <i class="fa fa-plus me-1"></i> Thêm tài khoản
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Ảnh</th>
                        <th>Họ tên</th>
                        <th>Email</th>
                        <th>Vai trò</th>
                        <th>Trạng thái</th>
                        <th class="text-end">Hành động</th>
                    </tr>
                </thead>
                <tbody id="accountTableBody">
                    <!-- Ví dụ dữ liệu mẫu -->
                    <tr>
                        <td>1</td>
                        <td><img src="https://placehold.co/40x40?text=GV" class="rounded-circle" /></td>
                        <td>Nguyễn Văn A</td>
                        <td>giaovien@example.com</td>
                        <td><span class="badge bg-info">Giảng viên</span></td>
                        <td><span class="badge bg-success">Hoạt động</span></td>
                        <td class="text-end">
                            <a asp-action="Details" asp-route-id="1" class="btn btn-sm btn-outline-secondary"><i class="fa fa-eye"></i></a>
                            <a asp-action="Edit" asp-route-id="1" class="btn btn-sm btn-outline-primary"><i class="fa fa-edit"></i></a>
                            <button class="btn btn-sm btn-outline-danger"><i class="fa fa-trash"></i></button>
                        </td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td><img src="https://placehold.co/40x40?text=SV" class="rounded-circle" /></td>
                        <td>Trần Thị B</td>
                        <td>sinhvien@example.com</td>
                        <td><span class="badge bg-secondary">Sinh viên</span></td>
                        <td><span class="badge bg-warning text-dark">Tạm khóa</span></td>
                        <td class="text-end">
                            <a asp-action="Details" asp-route-id="2" class="btn btn-sm btn-outline-secondary"><i class="fa fa-eye"></i></a>
                            <a asp-action="Edit" asp-route-id="2" class="btn btn-sm btn-outline-primary"><i class="fa fa-edit"></i></a>
                            <button class="btn btn-sm btn-outline-danger"><i class="fa fa-trash"></i></button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
