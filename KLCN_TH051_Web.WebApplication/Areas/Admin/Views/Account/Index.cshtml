    <script>
                const API_ROLES = '@apiUrl/api/roles';

        // Lấy token
        function getHeaders() {
            const token = localStorage.getItem('authToken');
            if (!token) {
                alert('Phiên đăng nhập hết hạn!');
                window.location.href = '/Admin/Auth/Login';
                return {};
            }
            return {
                'Content-Type': 'application/json',
                'Authorization': 'Bearer ' + token
            };
        }

        // Fetch wrapper
        async function apiFetch(url, options = {}) {
            const res = await fetch(url, { ...options, headers: getHeaders() });
            if (!res) return null;
            if (res.status === 401 || res.status === 403) {
                localStorage.removeItem('authToken');
                alert('Phiên đăng nhập hết hạn!');
                window.location.href = '/Admin/Auth/Login';
                return null;
            }
            return res;
        }

        // Load danh sách role
        async function loadRoles() {
            const res = await apiFetch(API_ROLES);
            if (!res || !res.ok) return;
            const roles = await res.json();

            const listGroup = document.querySelector('#tabRoles .list-group');
            listGroup.innerHTML = '';

            roles.forEach(r => {
                const a = document.createElement('a');
                a.className = 'list-group-item list-group-item-action d-flex justify-content-between';
                a.href = '#';
                a.dataset.roleName = r.Name;
                a.innerHTML = `
                    <div>
                        <div class="fw-semibold">${r.Name}</div>
                        <small class="text-muted">(${r.Permissions.length}) quyền</small>
                    </div>
                    <i class="fa fa-chevron-right"></i>
                `;
                a.addEventListener('click', () => openEditRoleModal(r));
                listGroup.appendChild(a);
            });
        }

        // Mở modal sửa role
        function openEditRoleModal(role) {
            document.getElementById('editRoleName').value = role.Name;
            document.getElementById('editRoleDesc').value = role.Description || '';

            // Set checkbox quyền
            const checkboxes = document.querySelectorAll('#editRoleModal input[type="checkbox"]');
            checkboxes.forEach(cb => {
                cb.checked = role.Permissions.includes(cb.value);
            });

            const modal = new bootstrap.Modal(document.getElementById('editRoleModal'));
            modal.show();
        }

        // Lưu thay đổi role
        document.getElementById('btnSaveRole').addEventListener('click', async () => {
            const roleName = document.getElementById('editRoleName').value;
            const permissions = Array.from(document.querySelectorAll('#editRoleModal input[type="checkbox"]:checked'))
                                     .map(cb => cb.value);

            const res = await apiFetch(`${API_ROLES}/${roleName}/permissions`, {
                method: 'PUT',
                body: JSON.stringify(permissions)
            });

            if (res && res.ok) {
                alert('Cập nhật role thành công!');
                bootstrap.Modal.getInstance(document.getElementById('editRoleModal')).hide();
                loadRoles();
            } else {
                const err = await res.json();
                alert(err.message || 'Cập nhật thất bại');
            }
        });

        // Thêm role mới
        document.getElementById('btnAddRole').addEventListener('click', async () => {
            const roleName = document.getElementById('addRoleName').value.trim();
            const permissions = Array.from(document.querySelectorAll('#addRoleModal input[type="checkbox"]:checked'))
                                     .map(cb => cb.value);
            if (!roleName) return alert('Nhập tên role');

            // Gọi API tạo role
            const res = await apiFetch(API_ROLES, {
                method: 'POST',
                body: JSON.stringify({ Name: roleName, Permissions: permissions })
            });

            if (res && res.ok) {
                alert('Tạo role thành công!');
                bootstrap.Modal.getInstance(document.getElementById('addRoleModal')).hide();
                loadRoles();
            } else {
                const err = await res.json();
                alert(err.message || 'Tạo role thất bại');
            }
        });

        // Khởi động
        document.addEventListener('DOMContentLoaded', () => {
            loadRoles();
        });

    </script>
