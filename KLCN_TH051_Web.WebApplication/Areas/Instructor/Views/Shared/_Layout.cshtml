@inject IConfiguration Configuration
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Learning</title>
    <link rel="icon" href="~/favicon.ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <style>
        body.body-admin-layout {
            padding-top: 56px;
        }

        .main-layout-container {
            display: flex;
            min-height: calc(100vh - 56px);
        }

        .sidebar-nav {
            width: 250px;
            background-color: #f8f9fa;
            border-right: 1px solid #dee2e6;
            padding: 1rem 0;
        }

            .sidebar-nav .nav-link {
                color: #495057;
                padding: 0.75rem 1.5rem;
                border-left: 3px solid transparent;
                transition: all 0.3s ease;
            }

                .sidebar-nav .nav-link:hover {
                    background-color: #e9ecef;
                    color: #0d6efd;
                }

                .sidebar-nav .nav-link.active {
                    background-color: #e7f1ff;
                    color: #0d6efd;
                    border-left-color: #0d6efd;
                    font-weight: 500;
                }

                .sidebar-nav .nav-link i {
                    width: 20px;
                    margin-right: 0.5rem;
                }

        .main-content {
            flex: 1;
            padding: 1.5rem;
            background-color: #fff;
            overflow-y: auto;
        }

        .navbar-dark .navbar-nav .nav-link {
            color: rgba(255, 255, 255, 0.8);
        }

            .navbar-dark .navbar-nav .nav-link:hover {
                color: #fff;
            }
    </style>
</head>
<body class="body-admin-layout">
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark fixed-top shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">E-LEARNING TEACHER DASHBOARD</a>
                <ul class="navbar-nav ms-auto d-flex flex-row align-items-center" id="navbar-right-icons">
                    <li class="nav-item me-2">
                        <a class="nav-link" href="#" title="Tìm kiếm"><i class="fas fa-search"></i></a>
                    </li>
                    <li class="nav-item me-2">
                        <a class="nav-link" href="#" title="Thông báo"><i class="fas fa-bell"></i></a>
                    </li>
                    <li class="nav-item me-3">
                        <a class="nav-link" href="#" title="Yêu thích"><i class="fas fa-heart"></i></a>
                    </li>

                    <!-- Dropdown tài khoản -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="~/images/avatar_default.png" alt="Avatar" class="rounded-circle" width="30" height="30" />
                            <span class="d-none d-sm-inline ms-2" id="headerUserName">Tài khoản</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown" id="headerDropdownMenu">
                            <li><span class="dropdown-item">Đang tải...</span></li>
                        </ul>
                    </li>
                </ul>

                <script src="https://cdn.jsdelivr.net/npm/jwt-decode/build/jwt-decode.min.js"></script>
                <script>
                    // Hàm cập nhật header theo trạng thái login
                    function updateHeader() {
                        const token = localStorage.getItem("teacherToken");
                        const nameSpan = document.getElementById("headerUserName");
                        const dropdownMenu = document.getElementById("headerDropdownMenu");
                        dropdownMenu.innerHTML = "";

                        if (token) {
                            try {
                                const decoded = jwt_decode(token);
                                const role = decoded["http://schemas.microsoft.com/ws/2008/06/identity/claims/role"];
                                const fullName = decoded["http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name"];

                                nameSpan.textContent = fullName || "Teacher";

                                // Dropdown nội dung
                                dropdownMenu.innerHTML = `
                                    <li>
                                        <a class="dropdown-item" href="/Instructor/Profile/Index">
                                            <i class="fas fa-user me-2"></i> Trang cá nhân
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a href="#" class="dropdown-item text-danger" id="logoutBtn">
                                            <i class="fas fa-sign-out-alt me-2"></i> Đăng xuất
                                        </a>
                                    </li>
                                `;

                                // Gán sự kiện logout
                                document.getElementById("logoutBtn").addEventListener("click", function(e){
                                    e.preventDefault();
                                    localStorage.removeItem("teacherToken");
                                    localStorage.removeItem("teacherName");
                                    window.location.href = "/Instructor/Auth/Login";
                                });
                            } catch (err) {
                                console.error("Token không hợp lệ", err);
                                // Xóa token nếu decode lỗi
                                localStorage.removeItem("teacherToken");
                                nameSpan.textContent = "Tài khoản";
                                dropdownMenu.innerHTML = `<li><span class="dropdown-item">Chưa đăng nhập</span></li>`;
                            }
                        } else {
                            // Chưa login
                            nameSpan.textContent = "Tài khoản";
                            dropdownMenu.innerHTML = `<li><a class="dropdown-item" href="/Instructor/Auth/Login">Đăng nhập</a></li>`;
                        }
                    }

                    // Gọi khi load layout
                    updateHeader();
                </script>

            </div>
        </nav>
    </header>

    <div class="main-layout-container">
        <nav class="sidebar-nav">
            @{
                var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
            }
            <ul class="nav flex-column">

                <li class="nav-item">
                    <a class="nav-link @(currentController == "Course" ? "active" : "")"
                       asp-area="Instructor" asp-controller="Course" asp-action="Index">
                        <i class="fas fa-book"></i> Quản lý khóa học
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link @(currentController == "Statistics" ? "active" : "")"
                       asp-area="Instructor" asp-controller="Statistics" asp-action="Index">
                        <i class="fas fa-dollar-sign"></i> Quản lý thu nhập
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link @(currentController == "Orders" ? "active" : "")"
                       asp-area="Instructor" asp-controller="Orders" asp-action="Index">
                        <i class="fas fa-user"></i> Quản lý đơn hàng
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link @(currentController == "Ranking" ? "active" : "")"
                       asp-area="Instructor" asp-controller="Ranking" asp-action="Index">
                        <i class="fas fa-trophy"></i> Xếp hạng học viên
                    </a>
                </li>

                @* <li class="nav-item">
                    <a class="nav-link @(currentController == "Settings" ? "active" : "")"
                       asp-area="Instructor" asp-controller="Settings" asp-action="Index">
                        <i class="fas fa-cog"></i> Cài đặt
                    </a>
                </li> *@

            </ul>
        </nav>

        <main role="main" class="main-content">
            @RenderBody()
        </main>
    </div>

    <script>
        window.API_URL = "@Configuration["ApiUrl"]"; // URL từ appsettings.json
    </script>

    <script type="module" src="@Url.Content("~/js/core/BaseApi.js")"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>