<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Learning</title>
    <link rel="icon" href="~/favicon.ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        body.body-admin-layout {
            padding-top: 56px;
        }

        .main-layout-container {
            display: flex;
            min-height: calc(100vh - 56px);
        }

        .sidebar-nav {
            width: 250px;
            background-color: #f8f9fa;
            border-right: 1px solid #dee2e6;
            padding: 1rem 0;
        }

            .sidebar-nav .nav-link {
                color: #495057;
                padding: 0.75rem 1.5rem;
                border-left: 3px solid transparent;
                transition: all 0.3s ease;
            }

                .sidebar-nav .nav-link:hover {
                    background-color: #e9ecef;
                    color: #0d6efd;
                }

                .sidebar-nav .nav-link.active {
                    background-color: #e7f1ff;
                    color: #0d6efd;
                    border-left-color: #0d6efd;
                    font-weight: 500;
                }

                .sidebar-nav .nav-link i {
                    width: 20px;
                    margin-right: 0.5rem;
                }

        .main-content {
            flex: 1;
            padding: 1.5rem;
            background-color: #fff;
            overflow-y: auto;
        }

        .navbar-dark .navbar-nav .nav-link {
            color: rgba(255, 255, 255, 0.8);
        }

            .navbar-dark .navbar-nav .nav-link:hover {
                color: #fff;
            }
    </style>
</head>
<body class="body-admin-layout">
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark fixed-top shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">E-LEARNING</a>
                <ul class="navbar-nav ms-auto d-flex flex-row align-items-center" id="navbar-right-icons">
                    <li class="nav-item me-2">
                        <a class="nav-link" href="#" title="Tìm kiếm">
                            <i class="fas fa-search"></i>
                        </a>
                    </li>
                    <li class="nav-item me-2">
                        <a class="nav-link" href="#" title="Thông báo">
                            <i class="fas fa-bell"></i>
                        </a>
                    </li>
                    <li class="nav-item me-3">
                        <a class="nav-link" href="#" title="Yêu thích">
                            <i class="fas fa-heart"></i>
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="~/images/avatar_default.png" alt="Avatar" class="rounded-circle" width="30" height="30" />
                            <span class="d-none d-sm-inline ms-2">Teacher</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" asp-controller="Profile" asp-action="Index">Trang cá nhân</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">Đăng xuất</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="main-layout-container">
        <nav class="sidebar-nav">
            @{
                var controller = ViewContext.RouteData.Values["controller"]?.ToString();
                var action = ViewContext.RouteData.Values["action"]?.ToString();
            }

            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link @(controller == "Course" ? "active" : "")"
                       asp-area="Instructor"
                       asp-controller="Course"
                       asp-action="Index">
                        <i class="fas fa-book"></i> Quản lý khóa học
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(controller == "Income" ? "active" : "")"
                       asp-area="Instructor"
                       asp-controller="Income"
                       asp-action="Index">
                        <i class="fas fa-dollar-sign"></i> Quản lý thu nhập
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(controller == "Profile" ? "active" : "")"
                       asp-area="Instructor"
                       asp-controller="Profile"
                       asp-action="Index">
                        <i class="fas fa-user"></i> Thông tin cá nhân
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(controller == "Settings" ? "active" : "")"
                       asp-area="Instructor"
                       asp-controller="Settings"
                       asp-action="Index">
                        <i class="fas fa-cog"></i> Cài đặt
                    </a>
                </li>
            </ul>
        </nav>

        <main role="main" class="main-content">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>