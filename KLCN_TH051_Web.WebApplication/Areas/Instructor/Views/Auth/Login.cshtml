@{
    ViewData["Title"] = "Đăng nhập giáo viên";
    Layout = null;
    var apiUrl = ViewData["ApiUrl"]?.ToString() ?? "";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css">

<div class="container mt-5" style="max-width:400px;">
    <h3 class="mb-4 text-center">@ViewData["Title"]</h3>
    <div class="card p-4 shadow-sm">
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" placeholder="Nhập email">
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Mật khẩu</label>
            <input type="password" class="form-control" id="password" placeholder="Nhập mật khẩu">
        </div>
        <button class="btn btn-primary w-100" id="btnLogin">Đăng nhập</button>
        <div class="mt-3 text-danger" id="loginError" style="display:none;"></div>
    </div>
</div>

<!-- Thêm thư viện jwt-decode -->
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jwt-decode/build/jwt-decode.min.js"></script>

<script>
    const apiLogin = "@(apiUrl)/api/Account/login";

    document.getElementById("btnLogin").addEventListener("click", async () => {
        const email = document.getElementById("email").value.trim();
        const password = document.getElementById("password").value.trim();
        const errorDiv = document.getElementById("loginError");
        errorDiv.style.display = "none";

        if (!email || !password) {
            errorDiv.textContent = "Vui lòng nhập email và mật khẩu!";
            errorDiv.style.display = "block";
            return;
        }

        try {
            const res = await axios.post(apiLogin, { email, password });

            if (res.data.success) {
                const token = res.data.data; // Token JWT trả về từ API
                localStorage.setItem("teacherToken", token);

                // Giải mã JWT để lấy thông tin role
                const decoded = jwt_decode(token);

                const role = decoded["http://schemas.microsoft.com/ws/2008/06/identity/claims/role"];
                const fullName = decoded["http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name"];

                if (role === "Teacher") {
                    localStorage.setItem("teacherName", fullName || "");
                    // Chuyển hướng đến trang giáo viên
                    window.location.href = "/Instructor/course/Index";
                } else {
                    errorDiv.textContent = "Chỉ tài khoản giáo viên mới được phép đăng nhập!";
                    errorDiv.style.display = "block";
                }
            } else {
                errorDiv.textContent = res.data.message || "Đăng nhập thất bại!";
                errorDiv.style.display = "block";
            }
        } catch (err) {
            console.error(err);
            errorDiv.textContent = err.response?.data?.message || "Lỗi khi gọi API!";
            errorDiv.style.display = "block";
        }
    });
</script>
