                    <div class="flex-grow-1">Câu hỏi</div>
                    <div class="flex-grow-1">Đa lựa chọn</div>
                    <div style="width:120px;">Tuỳ chọn</div>
                </div>

                <div id="quizQuestionList"></div>

            </div>

            <div class="modal-footer">
                <button class="btn btn-light" data-bs-dismiss="modal">Đóng</button>
                <button class="btn btn-primary" id="saveQuizBtn">Lưu</button>
            </div>

        </div>
    </div>
</div>



<!-- ========================== JS ========================== -->

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>
<script src="https://cdn.quilljs.com/1.3.6/quill.min.js"></script>

<script>
    /* ======== QUILL EDITOR (BÀI ĐỌC) ======== */
    const minimalToolbar = [
        [{ header: [false, 1, 2, 3] }],
        ["bold", "italic", "underline"],
        ["blockquote"],
        [{ list: "ordered" }, { list: "bullet" }],
        [{ align: [] }],
        ["link", "image"],
        ["code-block"]
    ];

    var readingEditor = new Quill("#readingEditor", {
        theme: "snow",
        modules: {
            toolbar: minimalToolbar
        }
    });


    /* ======== MỞ MODAL THEO LOẠI ======== */
    document.querySelectorAll(".btn-edit-content").forEach(btn => {
        btn.addEventListener("click", () => {
            const type = btn.getAttribute("data-type");

            if (type === "reading")
                new bootstrap.Modal("#editReadingModal").show();
            else if (type === "video")
                new bootstrap.Modal("#editVideoModal").show();
            else if (type === "quiz")
                new bootstrap.Modal("#editQuizModal").show();
        });
    });


    /* ======== QUIZ STEP 1 → STEP 2 ======== */
    document.getElementById("btnCreateQuiz").addEventListener("click", () => {
        let desc = document.getElementById("quizDescriptionInput").value.trim();
        if (!desc) return alert("Vui lòng nhập mô tả!");

        document.getElementById("quizDescription").value = desc;

        bootstrap.Modal.getInstance(document.getElementById("quizDescriptionModal")).hide();
        new bootstrap.Modal(document.getElementById("editQuizModal")).show();
    });


    /* ======== QUIZ: ADD QUESTION ======== */
    document.getElementById("addQuizQuestionBtn").addEventListener("click", () => {
        const html = `
            <div class="border p-2 mt-2 quiz-block">
                <div class="d-flex mb-2">
                    <div class="flex-grow-1">
                        <input class="form-control quiz-question-input" placeholder="Nhập câu hỏi"/>
                    </div>

                    <div class="d-flex align-items-center ms-3">
                        <label class="me-1">Đa lựa chọn</label>
                        <input type="checkbox" class="form-check-input quiz-multi-check">
                    </div>

                    <button class="btn btn-link text-danger ms-3 btn-del-question">
                        <i class="bi bi-trash"></i>
                    </button>
                </div>

                <div class="quiz-answer-list"></div>

                <button class="btn btn-outline-primary btn-sm btn-add-answer mt-2">+ Thêm đáp án</button>
            </div>
        `;

        document.getElementById("quizQuestionList").insertAdjacentHTML("beforeend", html);
    });


    /* ======== QUIZ: ADD/REMOVE ANSWER ======== */
    document.addEventListener("click", e => {
        if (e.target.closest(".btn-add-answer")) {
            const wrap = e.target.closest(".quiz-block").querySelector(".quiz-answer-list");
            wrap.insertAdjacentHTML("beforeend", `
                <div class="d-flex align-items-center mb-2 answer-row">
                    <input class="form-control me-2 quiz-answer-input" placeholder="Nhập đáp án"/>
                    <label class="me-1">Đúng</label>
                    <input type="checkbox" class="form-check-input quiz-correct-check">
                    <button class="btn btn-link text-danger ms-2 btn-del-answer">
                        <i class="bi bi-trash"></i>
                    </button>
                </div>
            `);
        }

        if (e.target.closest(".btn-del-question"))
            e.target.closest(".quiz-block").remove();

        if (e.target.closest(".btn-del-answer"))
            e.target.closest(".answer-row").remove();
    });



    /* ======== SAVE QUIZ ======== */
    document.getElementById("saveQuizBtn").addEventListener("click", () => {

        let quiz = [];

        document.querySelectorAll(".quiz-block").forEach(block => {
            const question = block.querySelector(".quiz-question-input").value;
            const multiple = block.querySelector(".quiz-multi-check").checked;

            let answers = [];

            block.querySelectorAll(".answer-row").forEach(a => {
                answers.push({
                    text: a.querySelector(".quiz-answer-input").value,
                    correct: a.querySelector(".quiz-correct-check").checked
                });
            });

            quiz.push({ question, multiple, answers });
        });

        console.log("QUIZ SAVED:", quiz);
        alert("Quiz đã lưu!");
    });


    /* ======== SORTABLE ======== */
    new Sortable(document.getElementById("lessonList"), {
        animation: 150,
        handle: ".handle",
        ghostClass: "sortable-ghost"
    });

</script>
