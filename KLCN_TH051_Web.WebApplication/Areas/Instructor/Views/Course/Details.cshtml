    </div>
</div>

<!-- ========================== MODAL BÀI ĐỌC ========================== -->
<div class="modal fade" id="editReadingModal" tabindex="-1">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Chỉnh sửa bài đọc</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">Tên bài đọc</label>
                    <input type="text" id="readingTitle" class="form-control" value="Giới thiệu về ASP.NET Core">
                </div>
                <div class="mb-3">
                    <label class="form-label">Nội dung</label>
                    <div id="readingEditor" style="height:400px;"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary" onclick="saveReading()">Lưu</button>
            </div>
        </div>
    </div>
</div>

