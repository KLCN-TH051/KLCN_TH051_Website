    </div>
</div>

<!-- ========================== MODAL QUIZ STEP 1 ========================== -->
<div class="modal fade" id="quizDescriptionModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content p-3">

            <h5 class="modal-title mb-3">Quiz</h5>

            <label class="form-label">Mô tả</label>
            <input type="text" id="quizDescriptionInput" class="form-control mb-3" placeholder="Bài ôn tập số 1">

            <div class="mt-3 d-flex">
                <button class="btn btn-primary" id="btnCreateQuiz">TẠO MỚI</button>
                <div class="flex-grow-1"></div>
                <button class="btn btn-light" data-bs-dismiss="modal">Đóng</button>
            </div>

        </div>
    </div>
</div>


<!-- ========================== MODAL QUIZ STEP 2 ========================== -->
<div class="modal fade" id="editQuizModal" tabindex="-1">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Quiz</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">

                <label class="form-label">Mô tả</label>
                <input type="text" id="quizDescription" class="form-control mb-3">

                <div class="d-flex mb-3">
                    <button class="btn btn-primary me-2">UPDATE</button>
                    <div class="flex-grow-1"></div>
                    <button class="btn btn-primary me-2" id="addQuizQuestionBtn">THÊM CÂU HỎI +</button>
                    <button class="btn btn-outline-primary">
                        <i class="bi bi-cloud-upload"></i> IMPORT CÂU HỎI TỪ EXCEL
                    </button>
                </div>

