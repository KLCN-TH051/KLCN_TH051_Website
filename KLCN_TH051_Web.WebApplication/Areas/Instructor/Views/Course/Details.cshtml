@* @{
    ViewData["Title"] = "Chi tiết khóa học";
    var fakeTitle = "Khoá học lập trình ASP.NET Core";
    var fakeCategory = "Lập trình web";
    var fakeDescription = "Khoá học từ cơ bản đến nâng cao về ASP.NET Core 8.";
    var fakePrice = 300000;
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">

<style>
    .handle {
        cursor: grab;
    }

    .sortable-ghost {
        opacity: .5;
    }
</style>

<div class="row">
    <partial name="_Sidebar" />

    <div class="col-9">

        <!-- ================== THÔNG TIN KHOÁ HỌC ================== -->
        <h4 class="mb-4">Cập nhật khóa học</h4>
        <form>
            <div class="row">
                <div class="col-md-8 mb-3">
                    <label class="form-label">Tên khóa học</label>
                    <input type="text" class="form-control" value="@fakeTitle">
                </div>
                <div class="col-md-4 mb-3">
                    <label class="form-label">Danh mục</label>
                    <select class="form-select">
                        <option selected>@fakeCategory</option>
                        <option>Lập trình Java</option>
                        <option>Lập trình .NET</option>
                    </select>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Upload file</label>
                <input type="file" class="form-control">
            </div>

            <div class="mb-3">
                <label class="form-label">Mô tả</label>
                <textarea class="form-control" rows="4">@fakeDescription</textarea>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label class="form-label">Giá</label>
                    <input type="number" class="form-control" value="@fakePrice">
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <input type="checkbox" class="form-check-input me-1" id="freeCheck">
                    <label class="form-check-label" for="freeCheck">Miễn phí</label>
                </div>
            </div>

            <button class="btn btn-primary mb-4">Lưu</button>
        </form>

        <hr />

        <!-- ================== NỘI DUNG KHOÁ HỌC ================== -->
        <div>
            <div class="d-flex justify-content-between mb-3">
                <h5>Nội dung khóa học</h5>
                <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#addLessonModal">+ Thêm</button>
            </div>

            <div id="lessonList">

                <!-- BÀI ĐỌC -->
                <div class="lesson-item p-3 mb-2 d-flex justify-content-between align-items-center"
                     style="background-color:#e9f4ff;border-radius:6px;">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-list me-3 handle"></i>
                        <i class="bi bi-journal-text me-2"></i>
                        <strong>Giới thiệu (Bài đọc)</strong>
                    </div>
                    <div class="d-flex">
                        <button class="btn btn-outline-primary btn-sm me-2">Sửa</button>
                        <button class="btn btn-link text-dark me-1 btn-edit-content" data-type="reading"><i class="bi bi-pencil-square"></i></button>
                        <button class="btn btn-link text-danger"><i class="bi bi-trash"></i></button>
                    </div>
                </div>

                <!-- VIDEO -->
                <div class="lesson-item p-3 mb-2 d-flex justify-content-between align-items-center"
                     style="background-color:#e9f4ff;border-radius:6px;">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-list me-3 handle"></i>
                        <i class="bi bi-play-circle me-2"></i>
                        <strong>Ôn lại kiến thức căn bản (Video)</strong>
                    </div>
                    <div class="d-flex">
                        <button class="btn btn-outline-primary btn-sm me-2">Sửa</button>
                        <button class="btn btn-link text-dark me-1 btn-edit-content" data-type="video"><i class="bi bi-pencil-square"></i></button>
                        <button class="btn btn-link text-danger"><i class="bi bi-trash"></i></button>
                    </div>
                </div>

                <!-- QUIZ -->
                <div class="lesson-item p-3 mb-2 d-flex justify-content-between align-items-center"
                     style="background-color:#e9f4ff;border-radius:6px;">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-list me-3 handle"></i>
                        <i class="bi bi-question-circle me-2"></i>
                        <strong>Bài tập số 1 (Câu hỏi)</strong>
                    </div>
                    <div class="d-flex">
                        <button class="btn btn-outline-primary btn-sm me-2">Sửa</button>
                        <button class="btn btn-link text-dark me-1 btn-edit-content" data-type="quiz"><i class="bi bi-pencil-square"></i></button>
                        <button class="btn btn-link text-danger"><i class="bi bi-trash"></i></button>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>


<!-- ========================== MODAL THÊM BÀI ========================== -->
<div class="modal fade" id="addLessonModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content p-3">
            <div class="modal-header border-0">
                <h5 class="modal-title">Thêm bài học</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <label class="form-label">Tên bài học</label>
                <input type="text" class="form-control mb-3">

                <label class="form-label">Loại</label>
                <select class="form-select">
                    <option>Video</option>
                    <option>Bài đọc</option>
                    <option>Câu hỏi ôn tập</option>
                </select>

                <div class="form-check mt-3">
                    <input type="checkbox" class="form-check-input" id="previewCheck">
                    <label class="form-check-label" for="previewCheck">Cho phép xem trước</label>
                </div>
            </div>

            <div class="modal-footer border-0">
                <button class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                <button class="btn btn-primary">OK</button>
            </div>
        </div>
    </div>
</div>

<!-- ========================== MODAL BÀI ĐỌC ========================== -->
<div class="modal fade" id="editReadingModal" tabindex="-1">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Bài đọc</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <div id="readingEditor" style="height:420px;"></div>
            </div>

            <div class="modal-footer">
                <button class="btn btn-light" data-bs-dismiss="modal">Đóng</button>
                <button class="btn btn-primary">Lưu</button>
            </div>
        </div>
    </div>
</div>

<!-- ========================== MODAL VIDEO ========================== -->
<div class="modal fade" id="editVideoModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Video</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <video id="videoPreview" controls style="width:100%;background:#000;">
                    <source src="" type="video/mp4" />
                </video>

                <div class="mt-3">
                    <label class="form-label">Upload video mới</label>
                    <input type="file" id="videoUploadInput" class="form-control" accept="video/*">
                </div>
            </div>

            <div class="modal-footer">
                <button class="btn btn-light" data-bs-dismiss="modal">Đóng</button>
                <button class="btn btn-primary">Lưu</button>
            </div>
