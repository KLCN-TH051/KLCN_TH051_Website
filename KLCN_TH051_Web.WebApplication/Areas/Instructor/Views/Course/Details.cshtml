            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary" onclick="saveVideo()">Lưu</button>
            </div>
        </div>
    </div>
</div>

<!-- ========================== MODAL QUIZ ========================== -->
<div class="modal fade" id="editQuizModal" tabindex="-1">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Chỉnh sửa Quiz</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">Tên bài kiểm tra</label>
                    <input type="text" id="quizTitle" class="form-control" placeholder="Bài kiểm tra chương 1">
                </div>
                <div class="mb-3">
                    <label class="form-label">Mô tả</label>
                    <textarea id="quizDescription" class="form-control" rows="2" placeholder="Mô tả ngắn về bài kiểm tra"></textarea>
                </div>

                <div class="d-flex justify-content-between mb-3">
                    <button class="btn btn-primary" onclick="addQuestion()">
                        <i class="bi bi-plus-lg"></i> Thêm câu hỏi
                    </button>
                    <button class="btn btn-outline-primary">
                        <i class="bi bi-cloud-upload"></i> Import từ Excel
                    </button>
                </div>

                <div id="quizQuestionList"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary" onclick="saveQuiz()">Lưu</button>
            </div>
        </div>
    </div>
</div>

<!-- ========================== JAVASCRIPT ========================== -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>
<script src="https://cdn.quilljs.com/1.3.6/quill.min.js"></script>

<script>
    // Quill Editor
    const toolbarOptions = [
        [{ header: [1, 2, 3, false] }],
        ['bold', 'italic', 'underline', 'strike'],
        ['blockquote', 'code-block'],
        [{ list: 'ordered' }, { list: 'bullet' }],
        [{ align: [] }],
        ['link', 'image', 'video'],
        ['clean']
    ];

    const readingEditor = new Quill('#readingEditor', {
        theme: 'snow',
        modules: { toolbar: toolbarOptions }
    });

    // Sortable cho chương
    new Sortable(document.getElementById('chapterList'), {
        animation: 150,
        handle: '.handle',
        ghostClass: 'sortable-ghost'
    });

    // Sortable cho bài học
    document.querySelectorAll('.lesson-list').forEach(list => {
        new Sortable(list, {
            animation: 150,
            handle: '.handle',
            ghostClass: 'sortable-ghost'
        });
    });

    // Các hàm xử lý
    function saveChapter() {
        const name = document.getElementById('chapterName').value;
        const desc = document.getElementById('chapterDescription').value;

        if (!name.trim()) {
            alert('Vui lòng nhập tên chương!');
            return;
        }

        console.log('Thêm chương:', { name, desc });
        // Gọi API thêm chương ở đây

        bootstrap.Modal.getInstance(document.getElementById('addChapterModal')).hide();
    }

    function editChapter(id) {
        console.log('Sửa chương:', id);
        // Load dữ liệu và hiển thị modal
    }

    function deleteChapter(id) {
        if (confirm('Bạn có chắc muốn xóa chương này?')) {
            console.log('Xóa chương:', id);
            // Gọi API xóa
        }
    }

    function saveLesson() {
        const name = document.getElementById('lessonName').value;
        const type = document.getElementById('lessonType').value;
        const preview = document.getElementById('previewCheck').checked;

        if (!name.trim()) {
            alert('Vui lòng nhập tên bài học!');
            return;
        }

        console.log('Thêm bài học:', { name, type, preview });

        bootstrap.Modal.getInstance(document.getElementById('addLessonModal')).hide();

        // Mở modal tương ứng để nhập nội dung
        setTimeout(() => {
            if (type === 'reading') {
                new bootstrap.Modal(document.getElementById('editReadingModal')).show();
            } else if (type === 'video') {
                new bootstrap.Modal(document.getElementById('editVideoModal')).show();
            } else if (type === 'quiz') {
                new bootstrap.Modal(document.getElementById('editQuizModal')).show();
            }
        }, 300);
    }

    function editLesson(type, id) {
        console.log('Sửa bài học:', type, id);

        if (type === 'reading') {
            new bootstrap.Modal(document.getElementById('editReadingModal')).show();
        } else if (type === 'video') {
            new bootstrap.Modal(document.getElementById('editVideoModal')).show();
        } else if (type === 'quiz') {
            new bootstrap.Modal(document.getElementById('editQuizModal')).show();
        }
    }

    function deleteLesson(id) {
        if (confirm('Bạn có chắc muốn xóa bài học này?')) {
            console.log('Xóa bài học:', id);
        }
    }

    function saveReading() {
        const title = document.getElementById('readingTitle').value;
        const content = readingEditor.root.innerHTML;

        console.log('Lưu bài đọc:', { title, content });
        bootstrap.Modal.getInstance(document.getElementById('editReadingModal')).hide();
    }

    function saveVideo() {
        const title = document.getElementById('videoTitle').value;
        const fileInput = document.getElementById('videoUploadInput');

        console.log('Lưu video:', { title, file: fileInput.files[0] });
        bootstrap.Modal.getInstance(document.getElementById('editVideoModal')).hide();
    }

    function addQuestion() {
        const html = `
            <div class="card mb-3 question-block">
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-3">
                        <h6>Câu hỏi ${document.querySelectorAll('.question-block').length + 1}</h6>
                        <button class="btn btn-sm btn-outline-danger" onclick="this.closest('.question-block').remove()">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>

                    <div class="mb-3">
                        <input class="form-control question-input" placeholder="Nhập câu hỏi"/>
                    </div>

                    <div class="form-check mb-2">
                        <input type="checkbox" class="form-check-input multi-check">
                        <label class="form-check-label">Cho phép chọn nhiều đáp án</label>
                    </div>

                    <div class="answer-list mb-2"></div>

                    <button class="btn btn-sm btn-outline-primary" onclick="addAnswer(this)">
                        + Thêm đáp án
                    </button>
                </div>
            </div>
        `;

        document.getElementById('quizQuestionList').insertAdjacentHTML('beforeend', html);
    }

    function addAnswer(btn) {
        const answerList = btn.closest('.question-block').querySelector('.answer-list');
        const html = `
            <div class="input-group mb-2 answer-row">
                <input class="form-control answer-input" placeholder="Nhập đáp án"/>
                <div class="input-group-text">
                    <input type="checkbox" class="form-check-input correct-check" title="Đáp án đúng">
                    <label class="ms-1">Đúng</label>
                </div>
                <button class="btn btn-outline-danger" onclick="this.closest('.answer-row').remove()">
                    <i class="bi bi-trash"></i>
                </button>
            </div>
        `;
        answerList.insertAdjacentHTML('beforeend', html);
    }

    function saveQuiz() {
        const title = document.getElementById('quizTitle').value;
        const description = document.getElementById('quizDescription').value;

        const questions = [];
        document.querySelectorAll('.question-block').forEach(block => {
            const question = block.querySelector('.question-input').value;
            const multiple = block.querySelector('.multi-check').checked;

            const answers = [];
            block.querySelectorAll('.answer-row').forEach(row => {
                answers.push({
                    text: row.querySelector('.answer-input').value,
                    correct: row.querySelector('.correct-check').checked
                });
            });

            questions.push({ question, multiple, answers });
        });

        console.log('Lưu quiz:', { title, description, questions });
        bootstrap.Modal.getInstance(document.getElementById('editQuizModal')).hide();
    }

