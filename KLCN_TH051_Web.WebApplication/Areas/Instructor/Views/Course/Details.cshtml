@{
    ViewData["Title"] = "Chi tiết khóa học";
    var apiBaseUrl = ViewData["ApiUrl"]?.ToString() ?? "https://localhost:7134";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">

<style>
    .handle {
        cursor: grab;
    }

    .sortable-ghost {
        opacity: .5;
    }

    .chapter-card {
        background: #f8f9fa;
        border-left: 4px solid #0d6efd;
    }

    .lesson-item {
        background-color: #e9f4ff;
        border-radius: 6px;
    }
</style>

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <!-- ================== THÔNG TIN KHOÁ HỌC ================== -->
            <h4 class="mb-4">Cập nhật khóa học</h4>
            <form id="courseForm">
                <div class="row">
                    <div class="col-md-8 mb-3">
                        <label class="form-label">Tên khóa học</label>
                        <input type="text" class="form-control" id="courseName">
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Môn học</label>
                        <select class="form-select" id="courseCategory">
                            <option value="">-- Chọn môn học --</option>
                        </select>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Hình ảnh khóa học</label>
                    <input type="file" class="form-control" id="courseImage" accept="image/*">
                </div>

                <div class="mb-3">
                    <label class="form-label">Mô tả</label>
                    <textarea class="form-control" id="courseDescription" rows="4"></textarea>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Giá (VNĐ)</label>
                        <input type="number" class="form-control" id="coursePrice">
                    </div>
                    <div class="col-md-2 d-flex align-items-end mb-3">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="freeCheck">
                            <label class="form-check-label" for="freeCheck">Miễn phí</label>
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary mb-4">
                    <i class="bi bi-save"></i> Lưu thông tin khóa học
                </button>
            </form>

            <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

            <script>
                const apiBase = "@apiBaseUrl";
                const token = localStorage.getItem("teacherToken");
                const courseId = window.location.pathname.split("/").pop();

                // DOM
                const courseName = document.getElementById("courseName");
                const courseCategory = document.getElementById("courseCategory");
                const courseDescription = document.getElementById("courseDescription");
                const coursePrice = document.getElementById("coursePrice");
                const freeCheck = document.getElementById("freeCheck");

                // ===============================
                // LOAD CHI TIẾT KHÓA HỌC
                // ===============================
                async function loadCourseDetail() {
                    try {
                        const res = await axios.get(`${apiBase}/api/Course/${courseId}`, {
                            headers: { Authorization: `Bearer ${token}` }
                        });

                        const course = res.data;

                        courseName.value = course.name;
                        courseDescription.value = course.description;
                        coursePrice.value = course.price || 0;
                        freeCheck.checked = course.isFree || false;

                        courseCategory.innerHTML =
                            `<option value="${course.subjectId}" selected>${course.subjectName}</option>`;
                    }
                    catch (err) {
                        console.error(err);
                        alert("Không thể load chi tiết khóa học!");
                    }
                }

                // GỌI HÀM LOAD KHI MỚI VÀO TRANG
                loadCourseDetail();


                // ===============================
                // CẬP NHẬT KHÓA HỌC
                // ===============================
                document.getElementById("courseForm").addEventListener("submit", async function (e) {
                    e.preventDefault();

                    const updateModel = {
                        name: courseName.value,
                        subjectId: Number(courseCategory.value),
                        description: courseDescription.value,
                        price: Number(coursePrice.value),
                        isFree: freeCheck.checked
                    };

                    try {
                        await axios.put(`${apiBase}/api/Course/${courseId}`, updateModel, {
                            headers: {
                                Authorization: `Bearer ${token}`,
                                "Content-Type": "application/json"
                            }
                        });

                        alert("Cập nhật khóa học thành công!");
                    }
                    catch (error) {
                        console.error("Lỗi cập nhật:", error);
                        alert("Không thể cập nhật khóa học!");
                    }
                });
            </script>



            <hr class="my-4" />

            <!-- ================== NỘI DUNG KHOÁ HỌC (CHƯƠNG) ================== -->
            <div>
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="mb-0">Nội dung khóa học</h5>
                    <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#addChapterModal">
                        <i class="bi bi-plus-lg"></i> Thêm chương
                    </button>
                </div>

                <div id="chapterList">
                    <!-- CHƯƠNG 1 -->
                    <div class="chapter-card card mb-3">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-grip-vertical me-2 handle"></i>
                                <h6 class="mb-0 fw-bold">Chương 1: Giới thiệu</h6>
                            </div>
                            <div>
                                <button class="btn btn-sm btn-outline-primary me-1" onclick="editChapter(1)">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-danger" onclick="deleteChapter(1)">
                                    <i class="bi bi-trash"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-secondary" data-bs-toggle="collapse" data-bs-target="#chapter1">
                                    <i class="bi bi-chevron-down"></i>
                                </button>
                            </div>
                        </div>
                        <div id="chapter1" class="collapse show">
                            <div class="card-body">
                                <button class="btn btn-sm btn-success mb-3" data-bs-toggle="modal" data-bs-target="#addLessonModal">
                                    <i class="bi bi-plus"></i> Thêm bài học
                                </button>

                                <div class="lesson-list">
                                    <!-- BÀI ĐỌC -->
                                    <div class="lesson-item p-3 mb-2 d-flex justify-content-between align-items-center">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-grip-vertical me-3 handle"></i>
                                            <i class="bi bi-journal-text me-2 text-primary"></i>
                                            <div>
                                                <strong>Giới thiệu về ASP.NET Core</strong>
                                                <small class="d-block text-muted">Bài đọc</small>
                                            </div>
                                        </div>
                                        <div>
                                            <button class="btn btn-sm btn-outline-primary me-1" onclick="editLesson('reading', 1)">
                                                <i class="bi bi-pencil-square"></i>
                                            </button>
                                            <button class="btn btn-sm btn-outline-danger" onclick="deleteLesson(1)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </div>

                                    <!-- VIDEO -->
                                    <div class="lesson-item p-3 mb-2 d-flex justify-content-between align-items-center">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-grip-vertical me-3 handle"></i>
                                            <i class="bi bi-play-circle me-2 text-success"></i>
                                            <div>
                                                <strong>Cài đặt môi trường</strong>
                                                <small class="d-block text-muted">Video - 15:30</small>
                                            </div>
                                        </div>
                                        <div>
                                            <button class="btn btn-sm btn-outline-primary me-1" onclick="editLesson('video', 2)">
                                                <i class="bi bi-pencil-square"></i>
                                            </button>
                                            <button class="btn btn-sm btn-outline-danger" onclick="deleteLesson(2)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </div>

                                    <!-- QUIZ -->
                                    <div class="lesson-item p-3 mb-2 d-flex justify-content-between align-items-center">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-grip-vertical me-3 handle"></i>
                                            <i class="bi bi-question-circle me-2 text-warning"></i>
                                            <div>
                                                <strong>Bài kiểm tra chương 1</strong>
                                                <small class="d-block text-muted">Quiz - 5 câu hỏi</small>
                                            </div>
                                        </div>
                                        <div>
                                            <button class="btn btn-sm btn-outline-primary me-1" onclick="editLesson('quiz', 3)">
                                                <i class="bi bi-pencil-square"></i>
                                            </button>
                                            <button class="btn btn-sm btn-outline-danger" onclick="deleteLesson(3)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- CHƯƠNG 2 -->
                    <div class="chapter-card card mb-3">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-grip-vertical me-2 handle"></i>
                                <h6 class="mb-0 fw-bold">Chương 2: MVC Pattern</h6>
                            </div>
                            <div>
                                <button class="btn btn-sm btn-outline-primary me-1" onclick="editChapter(2)">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-danger" onclick="deleteChapter(2)">
                                    <i class="bi bi-trash"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-secondary" data-bs-toggle="collapse" data-bs-target="#chapter2">
                                    <i class="bi bi-chevron-down"></i>
                                </button>
                            </div>
                        </div>
                        <div id="chapter2" class="collapse">
                            <div class="card-body">
                                <button class="btn btn-sm btn-success mb-3" data-bs-toggle="modal" data-bs-target="#addLessonModal">
                                    <i class="bi bi-plus"></i> Thêm bài học
                                </button>
                                <div class="text-muted text-center py-4">Chưa có bài học nào</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- ========================== MODAL THÊM CHƯƠNG ========================== -->
<div class="modal fade" id="addChapterModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Thêm chương mới</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">Tên chương</label>
                    <input type="text" id="chapterName" class="form-control" placeholder="Ví dụ: Chương 1: Giới thiệu">
                </div>
                <div class="mb-3">
                    <label class="form-label">Mô tả (không bắt buộc)</label>
                    <textarea id="chapterDescription" class="form-control" rows="3" placeholder="Mô tả ngắn về nội dung chương"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" onclick="saveChapter()">Lưu</button>
            </div>
        </div>
    </div>
</div>

<!-- ========================== MODAL THÊM BÀI HỌC ========================== -->
<div class="modal fade" id="addLessonModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Thêm bài học</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">Tên bài học</label>
                    <input type="text" id="lessonName" class="form-control" placeholder="Nhập tên bài học">
                </div>
                <div class="mb-3">
                    <label class="form-label">Loại bài học</label>
                    <select class="form-select" id="lessonType">
                        <option value="reading">Bài đọc (Content Block)</option>
                        <option value="video">Video</option>
                        <option value="quiz">Bài kiểm tra (Quiz)</option>
                    </select>
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="previewCheck">
